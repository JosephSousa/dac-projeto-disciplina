<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="dac-pu" transaction-type="JTA">
    <jta-data-source>java:app/jdbc/dac</jta-data-source>
    <class>com.ifpb.dac.entidades.Professor</class>
    <class>com.ifpb.dac.entidades.Sala</class>
    <class>com.ifpb.dac.entidades.Curso</class>
    <class>com.ifpb.dac.entidades.Disciplina</class>
    <class>com.ifpb.dac.entidades.Laboratorio</class>
    <class>com.ifpb.dac.entidades.Aula</class>
    <class>com.ifpb.dac.entidades.Horario</class>
    <class>com.ifpb.dac.entidades.Turma</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
